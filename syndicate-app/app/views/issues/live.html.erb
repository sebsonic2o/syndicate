
<div id="<%= @current_issue.id %>" class="leaderboard">
  
  <%= @current_issue.participant_count %>
  <%= @current_issue.vote_count %>
  <%= @current_issue.yes_votes %>
  <%= @current_issue.yes_percentage %>
  <%= @current_issue.no_votes %>
  <%= @current_issue.no_percentage %>
  <%= @current_issue.abstain_count %>

  <div class="button">
    <button id="yes-button" type="submit" value="YES" method="POST" action="/issues/<%= @current_issue.id %>">YES!</button>
  </div>

  <div class="button">
     <button id="no-button" type="submit" value="NO" method="POST" action="/issues/<%= @current_issue.id %>">NO!</button>
  </div>

</div>


<div class="participants">
<% @participants.each do |participant| %>
  <div id="<%= participant.id %>" class="participant">
    <h3 class="participant-username"><a href="#"><%= participant.username %></a></h3>

    <div class="avatar-holder">
      <img class="participant-image" src="<%= asset_path 'sherif.jpg' %>" />
    </div>

    <div class="constituents">
    </div>

     <button class="delegate-button" type="submit" value="Delegate" method="POST" action="/issues/<%= @current_issue.id %>/users/<%= participant.id %>/delegate" style="">Delegate</button>

  </div>
<% end %>
</div>


